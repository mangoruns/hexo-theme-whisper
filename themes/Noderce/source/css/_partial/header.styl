#header
  height 45px;
  background #bb3131;
  background: linear-gradient(to bottom,#ffffff, #f2f2f2);
  box-shadow: 0 1px 10px rgba(0,0,0,0.2);

  h1
    font-weight normal
    font-size 1.5em
    line-height 45px
    a
      color #38b49d;
      text-decoration none

  h2
    display none


  @media screen and (max-width: 820px)
    padding 0 1em

#main-nav
  position absolute
  right 0
  top 0
  ul
    list-style none
    li
      float left
      line-height 45px
      a
        color #777
        padding: 10px 15px 10px
        text-shadow: 0 1px 0 #ffffff
        text-decoration: none
        &:hover
          color #333